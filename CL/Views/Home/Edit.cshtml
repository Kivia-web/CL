@model CL.Models.ContactsPeople
@{
    ViewBag.Title = "Редактирование пользователя";
}
@Html.ValidationSummary(true)
<script src="/Scripts/MicrosoftAjax.js" type="text/javascript"></script>
<script src="/Scripts/MicrosoftMvcValidation.js" type="text/javascript"></script>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамиллия</label>
        <input type="text" asp-for="Surname" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.Surname, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Middlename" class="control-label">Отчество</label>
        <input type="text" asp-for="Middlename" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.Middlename, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.PhoneNumber, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Birthdate" class="control-label">День рождения</label>
        <input type="text" asp-for="Birthdate" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.Birthdate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Organization" class="control-label">Организация</label>
        <input type="text" asp-for="Organization" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.Organization, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Post" class="control-label">Должность</label>
        <input type="text" asp-for="Post" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.Post, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Skype" class="control-label">Skype</label>
        <input type="text" asp-for="Skype" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.Skype, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Other" class="control-label">Прочее</label>
        <input type="text" asp-for="Other" class="form-control" />
        @Html.ValidationMessageFor(Model => Model.Other, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
@{ 
    //Редактироване контакта
}