@model CL.Models.ContactsPeople
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt>Отчество</dt>
        <dd>
            @Html.DisplayFor(model => model.Middlename)
        </dd>
        <dt>Номер человека</dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>День рождения</dt>
        <dd>
            @Html.DisplayFor(model => model.Birthdate)
        </dd>
        <dt>Организация</dt>
        <dd>
            @Html.DisplayFor(model => model.Organization)
        </dd>
        <dt>Должность</dt>
        <dd>
            @Html.DisplayFor(model => model.Post)
        </dd>
        <dt>E-mail</dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>Skype</dt>
        <dd>
            @Html.DisplayFor(model => model.Skype)
        </dd>
        <dt>Прочее</dt>
        <dd>
            @Html.DisplayFor(model => model.Other)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
@{
    //Реализация операции удаления контакта
 }